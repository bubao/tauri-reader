{
  "build": {
    "devPath": "../src/foliate-js",
    "distDir": "../src/foliate-js",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "reader",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
		"url": "reader.html",
        "title": "reader",
        "width": 800,
        "height": 600,
		"fileDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "bubao.reader.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
